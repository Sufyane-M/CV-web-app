# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# Stripe Configuration (Server-side)
# IMPORTANTE: Non condividere mai la secret key!
# Ottieni le chiavi da: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Webhook Secret
# Ottieni da: https://dashboard.stripe.com/webhooks
# Necessario per verificare l'autenticit√† dei webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (configura i tuoi prodotti su Stripe Dashboard)
STRIPE_STARTER_PRICE_ID=price_your_starter_price_id
STRIPE_PREMIUM_PRICE_ID=price_your_premium_price_id

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100