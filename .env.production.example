# =============================================================================
# BACKEND API CONFIGURATION (Express/Node.js)
# =============================================================================

# Server Configuration
PORT=3001
NODE_ENV=production
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_here_min_32_chars



# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Email Configuration (Optional)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@your-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# Vercel Configuration
VERCEL_URL=your-api-domain.vercel.app

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# Health Check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# New Relic (Performance Monitoring)
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=CV-Analyzer-API

# DataDog (Optional)
DD_API_KEY=your_datadog_api_key
DD_SERVICE=cv-analyzer

# =============================================================================
# SECURITY
# =============================================================================

# HTTPS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Security Headers
HSTS_MAX_AGE=31536000
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://js.stripe.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.stripe.com https://*.supabase.co;"

# API Keys Encryption
ENCRYPTION_KEY=your_32_char_encryption_key_here

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Database Backup
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# AWS Configuration (for backups)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Monetization Features
ENABLE_PAYMENTS=true
ENABLE_SUBSCRIPTIONS=false
ENABLE_CREDITS_SYSTEM=true

# Analysis Features
ENABLE_AI_ANALYSIS=true
ENABLE_BULK_ANALYSIS=false
ENABLE_TEAM_FEATURES=false

# UI Features
ENABLE_DARK_MODE=true
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_EXPORT_FEATURES=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# OpenAI (for AI features)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4

# AI Webhook Configuration (n8n)
AI_WEBHOOK_URL=https://sufyane1023.app.n8n.cloud/webhook-test/prova
AI_WEBHOOK_SECRET=your_ai_webhook_secret

# LinkedIn API (Optional)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Google APIs (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Node.js Performance
NODE_OPTIONS="--max-old-space-size=2048"
UV_THREADPOOL_SIZE=16

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# =============================================================================
# DEVELOPMENT HELPERS (Remove in production)
# =============================================================================

# Debug Settings (Set to false in production)
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_CORS_ALL=false

