{
  "version": 2,
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/stripe/create-checkout-session",
      "destination": "/api/stripe/create-checkout-session.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/[...path].js"
    },
    { "source": "/((?!api).*)", "destination": "/index.html" }
  ]
}


