{
  "version": 2,
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "functions": {
    "api/[...path].js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/app.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/server.js": {
      "memory": 512,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/[...path].js"
    },
    { "source": "/((?!api).*)", "destination": "/index.html" }
  ]
}


